<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/bluetoothTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UAMS"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/bluetoothInstructure1"
        android:text="Establish Bluetooth Connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/PairedDeviceMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click ''Enable'' to turn on Bluetooth Connection"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"/>
    <TextView
        android:id="@+id/UnpairedDeviceMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To pair with UAMS, click ''Get Device''"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"/>

    <ImageView
        android:id="@+id/UAMSLOGO1"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        app:srcCompat="@drawable/ic_nav_drawer_logo" />

    <Button
        android:id="@+id/enableButton"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:text="Enable"
        android:clickable="true"
        android:onClick="enable"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="420dp"/>

    <Button
        android:id="@+id/disableButton"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:text="Disable"
        android:clickable="true"
        android:onClick="disable"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="420dp" />

    <Button
        android:id="@+id/getDeviceButton"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:clickable="true"
        android:onClick="getDevice"
        android:text="Get Device"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="420dp" />

</RelativeLayout>